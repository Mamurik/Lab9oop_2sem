<Window x:Class="Lab9oop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab9oop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#F0F0F0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Выбрать файл" Click="SelectFileButton_Click" Width="200" Height="40" Margin="0 10" Background="#007ACC" Foreground="White" FontSize="16"/>
            <TextBox x:Name="FileContentTextBox" IsReadOnly="True" Margin="0 10" Width="400" Height="200" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" FontSize="14"/>
            <Button Content="Вычислить сумму" Click="CalculateButton_Click" Width="200" Height="40" Margin="0 10" Background="#007ACC" Foreground="White" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>